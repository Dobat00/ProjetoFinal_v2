@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de clientes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Clientes" asp-action="Adicionar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Adicionar
            </a>
        </div>
    </div>
</div>
<br /><br />
<table class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nome do Cliente
            </th>
            <th>
                Conta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Nome
                </td>
                <td width="30%">
                    @obj.Valor  
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 "><i class="bi bi-pencil-square"></i>Editar</a>
                        <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 "><i class="bi bi-trash"></i>Deletar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
