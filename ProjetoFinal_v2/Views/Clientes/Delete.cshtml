@model Cliente

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary ">Deletar cliente</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" disabled class="form-control" />
 
        </div>
        <div class="mb-3">
            <label asp-for="Valor"></label>
            <input asp-for="Valor" disabled class="form-control" />
 

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Deletar</button>
        <a asp-controller="Clientes" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Voltar a lista
        </a>
    </div>
</form>